            </uxap:ObjectPageSection>

            <uxap:ObjectPageSection
                id="goals"
                title="2014 Goals Plan"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection id="goalsSS1">
                        <Label text="test3" />
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>
