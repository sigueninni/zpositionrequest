                    visible="{ path: 'SubStatus', formatter: '.formatter.subStatusVisibility' }"
                /> -->
        </uxap:headerContent>
        <!-- Section and forms -->
        <uxap:sections>
            <uxap:ObjectPageSection
                id="positionRequestFormSection"
                showTitle="true"
                title="{i18n>requestForm}"
                titleUppercase="true"
                visible="true"
            >
                <uxap:subSections>
                    <!-- Type & Dates -->
                    <uxap:ObjectPageSubSection
