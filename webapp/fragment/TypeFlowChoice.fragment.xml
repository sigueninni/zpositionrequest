<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Dialog
        id="rejectionDialog"
        title="{i18n>ChooseFlowType}"
        type="Message"
    >
        <content>
            <FlexBox
                alignContent="Center"
                justifyContent="Start"
            >
                <RadioButtonGroup
                    id="rgbFlowType"
                    valueState="Information"
                    select=".setFlowTypeAtCreation"
                >
                    <RadioButton
                        id="c"
                        text="{i18n>creation}"
                    />

                    <RadioButton
                        id="u"
                        text="{i18n>change}"
                    />
                </RadioButtonGroup>
                <ObjectStatus
                    class="sapUiSmallMargin"
                    icon="sap-icon://message-information"
                    state="Information"
                />
            </FlexBox>
        </content>
        <beginButton>
            <Button
                text="{i18n>confirm}"
                press="onConfirmTypeFlowButtonPress"
            />
        </beginButton>
        <endButton>
            <Button
                text="{i18n>cancel}"
                press="onCancelTypeFlowButtonPres"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
